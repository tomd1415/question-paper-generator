{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run with Nodemon",
        "type": "shell",
        "command": "npm run dev",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "listening on"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      }
    ]
  }
  