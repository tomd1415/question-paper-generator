<!-- views/generatequestions.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Generate Questions</title>
    <link rel="stylesheet" type="text/css" href="/css/generatequestions.css">
    <script src="/js/generatequestions.js"></script>
</head>
<body>

<div class="container">
    <h1>Generate Questions</h1>
    <!-- Add your form and inputs for generating questions here -->
    <form id="generateForm" method="post" action="/questions/generate">
        <label for="promptInput">Enter Prompt:</label><br>
        <textarea id="promptInput" name="prompt" rows="5" cols="80"></textarea><br><br>
        <label for="subjectSelect">Select Subject:</label><br>
        <select id="subjectSelect" name="subject">
            <!-- Options populated from the database -->
            <% subjects.forEach(function(subject) { %>
                <option value="<%= subject.subject_id %>"><%= subject.subject_name %></option>
            <% }); %>
        </select><br><br>
        <button type="submit">Generate Questions</button>
    </form>
</div>

</body>
</html>

